{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://datamesh.ai/schemas/catalog.lineage.input.json",
  "title": "Catalog Lineage Input",
  "description": "Input schema for retrieving data lineage information for a dataset",
  "type": "object",
  "required": ["dataset_uri"],
  "properties": {
    "dataset_uri": {
      "type": "string",
      "format": "uri",
      "description": "The URI of the dataset to get lineage for",
      "pattern": "^datamesh://[a-zA-Z0-9_-]+/[a-zA-Z0-9_-]+/[a-zA-Z0-9_-]+$",
      "examples": [
        "datamesh://sales/reporting/revenue_summary",
        "datamesh://finance/core/transactions"
      ]
    },
    "options": {
      "type": "object",
      "description": "Options for the lineage query",
      "properties": {
        "direction": {
          "type": "string",
          "description": "Direction of lineage to retrieve",
          "enum": ["upstream", "downstream", "both"],
          "default": "both",
          "examples": ["upstream", "downstream", "both"]
        },
        "depth": {
          "type": "integer",
          "description": "Maximum depth of lineage to traverse (number of hops)",
          "minimum": 1,
          "maximum": 10,
          "default": 3,
          "examples": [1, 3, 5]
        },
        "include_column_lineage": {
          "type": "boolean",
          "description": "Whether to include column-level lineage",
          "default": false,
          "examples": [true, false]
        },
        "include_transformations": {
          "type": "boolean",
          "description": "Whether to include transformation logic details",
          "default": true,
          "examples": [true]
        },
        "include_jobs": {
          "type": "boolean",
          "description": "Whether to include job/pipeline information",
          "default": true,
          "examples": [true]
        },
        "include_metrics": {
          "type": "boolean",
          "description": "Whether to include data flow metrics (volume, frequency)",
          "default": false,
          "examples": [true]
        },
        "as_of_timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "Get lineage as it existed at this timestamp",
          "examples": ["2024-01-15T00:00:00Z"]
        },
        "filter": {
          "type": "object",
          "description": "Filters to apply to lineage results",
          "properties": {
            "domains": {
              "type": "array",
              "description": "Only include datasets from these domains",
              "items": {
                "type": "string"
              },
              "examples": [["sales", "marketing"]]
            },
            "exclude_domains": {
              "type": "array",
              "description": "Exclude datasets from these domains",
              "items": {
                "type": "string"
              },
              "examples": [["sandbox", "test"]]
            },
            "tags": {
              "type": "array",
              "description": "Only include datasets with these tags",
              "items": {
                "type": "string"
              },
              "examples": [["production", "certified"]]
            },
            "owners": {
              "type": "array",
              "description": "Only include datasets owned by these teams",
              "items": {
                "type": "string"
              },
              "examples": [["data-engineering", "analytics"]]
            }
          }
        }
      }
    },
    "context": {
      "type": "object",
      "description": "Context for the lineage query",
      "properties": {
        "user": {
          "type": "object",
          "description": "User context for access control",
          "properties": {
            "id": {
              "type": "string",
              "examples": ["user-123"]
            },
            "roles": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "examples": [["data-analyst"]]
            }
          }
        },
        "purpose": {
          "type": "string",
          "description": "Purpose for accessing lineage information",
          "enum": ["impact_analysis", "root_cause_analysis", "compliance", "documentation", "debugging"],
          "examples": ["impact_analysis", "root_cause_analysis"]
        }
      }
    }
  },
  "examples": [
    {
      "dataset_uri": "datamesh://sales/reporting/revenue_summary",
      "options": {
        "direction": "both",
        "depth": 3,
        "include_column_lineage": true,
        "include_transformations": true,
        "include_jobs": true
      },
      "context": {
        "user": {
          "id": "analyst-001",
          "roles": ["data-analyst"]
        },
        "purpose": "impact_analysis"
      }
    },
    {
      "dataset_uri": "datamesh://finance/core/transactions",
      "options": {
        "direction": "upstream",
        "depth": 5,
        "include_column_lineage": false,
        "filter": {
          "domains": ["finance", "sales"],
          "exclude_domains": ["sandbox"]
        }
      },
      "context": {
        "purpose": "root_cause_analysis"
      }
    }
  ]
}
