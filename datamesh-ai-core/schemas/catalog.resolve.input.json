{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://datamesh.ai/schemas/catalog.resolve.input.json",
  "title": "Catalog Resolve Input",
  "description": "Input schema for resolving dataset metadata from the data catalog",
  "type": "object",
  "required": ["dataset_uri"],
  "properties": {
    "dataset_uri": {
      "type": "string",
      "format": "uri",
      "description": "The URI of the dataset to resolve in the data mesh catalog",
      "pattern": "^datamesh://[a-zA-Z0-9_-]+/[a-zA-Z0-9_-]+/[a-zA-Z0-9_-]+$",
      "examples": [
        "datamesh://sales/core/customers",
        "datamesh://finance/reporting/revenue",
        "datamesh://marketing/analytics/campaigns"
      ]
    },
    "fields_requested": {
      "type": "array",
      "description": "Specific fields to retrieve metadata for. If empty, returns all fields.",
      "items": {
        "type": "string",
        "description": "Field name to retrieve",
        "examples": ["customer_id", "name", "email", "created_at"]
      },
      "examples": [
        ["customer_id", "name", "email"],
        ["*"]
      ]
    },
    "options": {
      "type": "object",
      "description": "Options for the resolve operation",
      "properties": {
        "include_statistics": {
          "type": "boolean",
          "description": "Whether to include column statistics in the response",
          "default": false,
          "examples": [true, false]
        },
        "include_samples": {
          "type": "boolean",
          "description": "Whether to include sample values for each field",
          "default": false,
          "examples": [true, false]
        },
        "sample_count": {
          "type": "integer",
          "description": "Number of sample values to include per field",
          "minimum": 1,
          "maximum": 100,
          "default": 5,
          "examples": [5, 10]
        },
        "include_quality_metrics": {
          "type": "boolean",
          "description": "Whether to include data quality metrics",
          "default": false,
          "examples": [true]
        },
        "include_governance": {
          "type": "boolean",
          "description": "Whether to include governance information (classification, policies)",
          "default": false,
          "examples": [true]
        },
        "version": {
          "type": "string",
          "description": "Specific version of the dataset schema to resolve",
          "examples": ["v1.0.0", "latest", "2024-01-15"]
        },
        "as_of_timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "Resolve schema as it existed at this timestamp (time travel)",
          "examples": ["2024-01-15T00:00:00Z"]
        }
      }
    },
    "context": {
      "type": "object",
      "description": "Context for the resolve operation",
      "properties": {
        "user": {
          "type": "object",
          "description": "User context for access control",
          "properties": {
            "id": {
              "type": "string",
              "examples": ["user-123"]
            },
            "roles": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "examples": [["data-analyst"]]
            }
          }
        },
        "purpose": {
          "type": "string",
          "description": "Purpose for accessing the catalog metadata",
          "examples": ["query_planning", "data_discovery", "documentation", "lineage_analysis"]
        }
      }
    }
  },
  "examples": [
    {
      "dataset_uri": "datamesh://sales/core/customers",
      "fields_requested": ["customer_id", "name", "email", "country", "created_at"],
      "options": {
        "include_statistics": true,
        "include_samples": true,
        "sample_count": 5,
        "include_governance": true
      },
      "context": {
        "user": {
          "id": "analyst-001",
          "roles": ["data-analyst", "sales-reader"]
        },
        "purpose": "query_planning"
      }
    },
    {
      "dataset_uri": "datamesh://finance/reporting/revenue",
      "options": {
        "include_statistics": true,
        "version": "v2.0.0"
      }
    }
  ]
}
